<%= form_for(@potze) do |f| %>
  <% if @potze.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@potze.errors.count, "error") %> prohibited this potze from being saved:</h2>

      <ul>
      <% @potze.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :cupom %><br />
    <%= f.text_field :cupom %>
  </div>
  <div class="field">
    <%= f.label :user %><br />
    <%= f.text_field :user %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
